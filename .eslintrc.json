{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    // Code quality
    "no-console": "warn",
    "no-debugger": "error",
    // "no-unused-vars": "off", // Handled by TS version above

     // Style
     "semi": ["error", "always"],
     "quotes": ["error", "single", { "avoidEscape": true }],
     "indent": ["error", 2],
     "object-curly-spacing": ["error", "always"],
     "comma-dangle": ["error", "always-multiline"]
  }
}
